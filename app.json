{
  "expo": {
    "name": "geopasos-ssg",
    "slug": "geopasos-ssg",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "geopasosssg",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": { 
        "NSLocationWhenInUseUsageDescription": "Usamos tu ubicación para centrar el mapa y mostrar procesiones cercanas." 
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": ["ACCESS_COARSE_LOCATION", "ACCESS_FINE_LOCATION"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
       ["expo-location", { "locationAlwaysAndWhenInUsePermission": "Esta app usa tu ubicación para centrar el mapa y mostrar procesiones cercanas." }]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
